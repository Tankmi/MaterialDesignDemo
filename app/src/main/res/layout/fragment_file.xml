<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffbb">

    <TextView
        android:id="@+id/tv_file_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_file_fra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="点击输入内容"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_file_fra" />

    <Button
        android:id="@+id/btn_write_file_fra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Write"
        android:background="@color/red"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_read_file_fra"
        app:layout_constraintTop_toBottomOf="@id/et_file_fra" />


    <Button
        android:id="@+id/btn_read_file_fra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Read"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@id/btn_write_file_fra"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_file_fra"
        app:layout_constraintTop_toBottomOf="@id/et_file_fra" />

    <Button
        android:id="@+id/btn_delete_file_fra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@color/blue"
        app:layout_constraintStart_toEndOf="@id/btn_read_file_fra"
        app:layout_constraintEnd_toStartOf="@id/btn_rename_file_fra"
        app:layout_constraintTop_toBottomOf="@id/et_file_fra" />

    <Button
        android:id="@+id/btn_rename_file_fra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rename"
        android:background="@color/yellow"
        app:layout_constraintStart_toEndOf="@id/btn_delete_file_fra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_file_fra" />


</androidx.constraintlayout.widget.ConstraintLayout>
